        <Setter Property="LargeGlyph" Value="{Binding Source={dx:DXImage Image=PageSetup_32x32.png}}" />
    </Style>
    <Style x:Key="EntityView.Command.SaveLayout" TargetType="dxb:BarButtonItem">
